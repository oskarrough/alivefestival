<div class="Teaser-wrap">
	<figure class="Teaser-media">
		<img class="lazyload" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
			data-sizes="auto"
			data-srcset="
				{{item.better_featured_image.media_details.sizes.mini.source_url}} 200w,
				{{item.better_featured_image.media_details.sizes.mini-double.source_url}} 400w
			"
			alt="">
	</figure>
	<h2 style="color:{{escapeCSS color}}" class="Teaser-title">
		
		<span>{{{truncate-text item.title limit="80"}}}</span>
		{{#if item.acf.festival_date}}
			<span class="day">{{moment-format item.acf.festival_date "dddd"}}</span>
		{{/if}}
	</h2>
</div>


{{yield}}
