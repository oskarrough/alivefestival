<div class="Page" style="background-image:linear-gradient({{escapeCSS model.page.acf.top_color}} 0%, {{escapeCSS model.page.acf.bottom_color}} 5%) " >
	<div class="Page-top blog" style="color:{{escapeCSS model.page.acf.paragraph_text_color}}">
		<h1 class="page-title" style="color:{{escapeCSS model.page.acf.headline_color}}">{{model.page.title}}</h1>
		<p class="page-content"> {{{model.page.content}}}	
		</p>
	</div>
	{{#if model.page.acf.type}}
	<div class="grid-practical SidePadded">
			{{#each model.page.acf.type as |type|}}
				<div class="frivillig-type" style="border: 1px {{escapeCSS type.type_color}} solid; color: {{escapeCSS type.type_color}}">
				{{#if type.type_image}}
				<img src="{{type.type_image}}"/>
				{{/if}}
				<div class="frivillig-info" >
				<h2>{{type.type_navn}}</h2>
				<p>
				{{{type.type_attributes}}}
				</p>
				</div>
				</div>
			{{/each}}
	</div>
	{{/if}}
	{{#if model.page.acf.middle_extra_text}}
	<div class="Page SidePadded blog">
		{{#if model.page.acf.middle_extra_text}}
		<p class="page-content" style="color:{{escapeCSS model.page.acf.paragraph_text_color}}">
			{{{model.page.acf.middle_extra_text}}}</p>
		{{/if}}
	</div>
	{{/if}}
	{{#if model.page.acf.arbejdsroller}}
	<div class="grid-horizontal SidePadded">
			{{#each model.page.acf.arbejdsroller as |rolle|}}
	  				<figure class="arbejdsrolle-item">
                  	{{#if rolle.arbejdsrolle_image}}
						<img src="{{rolle.arbejdsrolle_image}}"> 
					{{/if}}
                    <figcaption style="color:{{escapeCSS model.page.acf.text_color}}">{{truncate-text rolle.arbejdsrolle_titel limit="80"}}</figcaption>
					 <p class="page-content" style="color:{{escapeCSS model.page.acf.paragraph_text_color}}">{{{rolle.arbejdsrolle_beskrivelse}}}</p>
					</figure>	
			{{/each}}
	</div>
	{{/if}}
	
	{{#if model.page.acf.extra_text}}
	<div class="Page-bottom blog">
		<p class="page-content topPadded" style="color: {{escapeCSS model.page.acf.text_color}}">
			<h2 style="color:{{escapeCSS model.page.acf.headline_color}}">{{model.page.acf.extratext_headline}}</h2>
			{{{model.page.acf.extra_text}}}</p>
	</div>
	{{/if}}

	

</div>

{{outlet}}
