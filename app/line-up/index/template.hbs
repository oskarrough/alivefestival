
<div class="SortingPage" style="background-image:linear-gradient({{escapeCSS model.page.acf.top_color}}, {{escapeCSS model.page.acf.bottom_color}})" >

	<div class="Page-body" style="color:{{escapeCSS model.page.acf.paragraph_text_color}}">
	<h1 class="page-title" style="color:{{escapeCSS model.page.acf.headline_color}}">{{model.page.title}}</h1>
		{{#if model.page.acf.alerting_text}}
			
			<h2 class="page-title" style="color:{{escapeCSS model.page.acf.headline_color}}">{{model.page.acf.alerting_text}}</h2>
		
			{{#if model.page.acf.alert_gallery}}
			{{image-element images=model.page.acf.alert_gallery}}
			{{/if}}
			
		{{/if}}
		<p class="page-content"> {{{model.page.content}}}
		</p>
		{{#if model.page.acf.show_program}}		
			{{filter-menu tags=tags class="tc"}}
		
			{{#if musiccategory}}
			<span>MUSIK</span>
				<p class="page-content">{{model.page.acf.music_text}}</p>
			{{/if}}
			{{#if kunstcategory}}
			<span>KUNST</span>
				<p class="page-content">{{model.page.acf.kultur_text}}</p>
			{{/if}}
			{{#if udflugtercategory}}
			<span>UDLFUGTER</span>
				<p class="page-content">{{model.page.acf.samv√¶r_text}}</p>
			{{/if}}
	
			{{#masonry-grid}}
				{{#each filteredArtists as |artist|}}
					<div class="Masonry-item">
						{{#link-to "line-up.artist" artist}}
							{{teaser-item item=artist color=model.page.acf.text_color}}
						{{/link-to}}
					</div>
				{{/each}}
			{{/masonry-grid}}
	
{{/if}}
	</div>

</div>





