
<article class="Artist" style="background-image:linear-gradient({{escapeCSS model.acf.top_color}} 0%, {{escapeCSS model.acf.bottom_color}} 20%) " >
		<div class="Artist-body Page-body blog">
			<h2 style="color:{{escapeCSS model.acf.headline_color}}" class="Teaser-title">
				<span class="page-title">{{{model.title}}}</span>
				{{#if model.acf.country}}
				<span class="day">{{model.acf.country}}</span>
				{{/if}}
				{{#if model.acf.festival_date}}
				<span class="day">{{moment-format model.acf.festival_date "dddd"}}</span>
				{{/if}}
			</h2>
			<div class="Artist-media">
			<img src="{{model.better_featured_image.media_details.sizes.mini-double.source_url}}"
				alt="{{model.better_featured_image.alt_text}}">
			</div>
			<p class="Artist-meta" style="color:{{escapeCSS model.acf.headline_color}}">
				{{#if model.acf.festival_date}}
				<strong>
					<time>
					{{moment-format model.acf.festival_date "dddd D/MM/YY"}}
					</time>
				</strong>
				{{/if}}
				
				{{#if model.acf.scene}}
				<strong>{{model.acf.scene}}</strong>
				{{/if}}
			
			</p>
			<div class="page-content">
				{{{model.content}}}
				<div class="horizontal-Centering ">
						
				{{#if model.acf.headline}}
					<h2 class="frontpage-headline-small" style="color:{{escapeCSS model.acf.headline_color}}">{{{model.acf.headline}}}</h2>
				{{/if}}
				{{#if model.acf.spotify_embed}}
					<div class="spotify-embed">{{{model.acf.spotify_embed}}}</div>
				{{/if}}

				<div style="border: 1px {{escapeCSS model.acf.button_frame_color}} solid; color:{{escapeCSS model.acf.button_frame_color}}"class="Button button-border small-caption with-animation"> 		
                    <a href="{{model.acf.url_1}}" style="color:{{escapeCSS model.acf.button_text_color}}">{{model.acf.url_1_text}}</a>
			</div>
		
            {{#if model.acf.url_2}}
			<div style="border: 1px {{model.acf.button_frame_color}} solid; color:{{escapeCSS model.acf.button_frame_color}}" class="Button button-border small-caption with-animation"> 
					<a href="{{model.acf.url_2}}" style="color:{{escapeCSS model.acf.button_text_color}}">{{model.acf.url_2_text}}</a>
			</div>
            {{/if}}
			</div>

			
				</div>
					
			
			{{!-- <p class="BackLink">{{#link-to 'program.index'}}â†– program{{/link-to}}</p> --}}

		</div>
	</article>
	

