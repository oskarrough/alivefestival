<div style="background-image:linear-gradient({{escapeCSS model.acf.top_color}}, {{escapeCSS model.acf.bottom_color}})" >
<div class="Page top-body" >
		{{#if model.better_featured_image}}
			<figure class="Page-banner">
				<img src="{{model.better_featured_image.source_url}}" alt="{{model.title}}">
			</figure>
		{{/if}}

		<div class="Artist-body Page-body blog">
			{{#if model.title}}
			<h2 style="color:{{escapeCSS model.acf.headline_color}}" class="Teaser-title">
						<span class="page-title">{{{model.title}}}</span>
			</h2>
			{{/if}}

			{{#unless hideContent}}
				<div class="page-content" style="color:{{escapeCSS model.acf.paragraph_text_color}}">
					{{{model.content}}}
				</div>
			{{/unless}}

			{{#if showSections}}
				<div class="Page-content">
					{{section-box-wrapper sections=model.acf.sections}}
				</div>
			{{/if}}

			{{#if model.acf.extra_text}}
				{{{model.acf.extra_text}}}
			{{/if}}

			{{yield}}
		</div>

		{{#if model.acf.background_image.sizes.bg-portrait-xl}}
			<img class="Page-backgroundImage" src="{{model.acf.background_image.sizes.bg-portrait-l}}" alt="">
		{{/if}}
	</div>


</div>

{{outlet}}
